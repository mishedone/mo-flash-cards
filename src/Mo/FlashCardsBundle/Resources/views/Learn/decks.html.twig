{% extends 'MoFlashCardsBundle::layout.html.twig' %}

{% block title %}{{ 'learnDecks.meta.title'|trans }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <h1>{{ 'learnDecks.content.heading'|trans }}</h1>
            
            <table class="table">
                <tbody>
                    {% for deck in decks %}
                        <tr>
                            <td>
                                <a href="{{ path('mofc_learn_cards', {'deckSlug': deck.slug}) }}">{{ deck.name }}</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}